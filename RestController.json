{
  "swagger": "2.0",
  "info": {
    "title": "EHRServer",
    "description": "The composition of ranks is determined by a taxonomist. The standards for the classification are not strictly codified.",
    "version": "0.0.1"
  },
  "host": "cabolabs-ehrserver.rhcloud.com",
  "schemes": [
    "https"
  ],
  "basePath": "/ehr",
  "produces": [
    "application/json"
  ],
  "paths": {
    "/patientsList": {
      "get": {
        "summary": "Listado de pacientes",
        "description": "Listado de pacientes",
        "parameters": [
          {
            "name": "Autorizathion",
            "in": "header",
            "description": "token to be passed as a header",
            "required": true,
            "type": "string"
          },
          {
            "name": "format",
            "in": "body",
            "description": "descripcion de parametro format",
            "required": true,
            "type": "string",
            "default":"json"
          },
          {
            "name": "max",
            "in": "body",
            "description": "descripcion de parametro max",
            "required": false,
            "type": "integer",
            "format": "int32",
            "default":null
          },
          {
            "name": "offset",
            "in": "body",
            "description": "descripcion de parametro offset",
            "required": false,
            "type": "integer",
            "format": "int32".
            "default":null
          }
        ],
        "tags": [
          "patients"
        ],
        "responses": {
          "500": {
            "description": "'$format' no reconocido, debe ser exactamente 'xml' o 'json'",
            "schema": {
              "type": "string"
            }
          },
          "200": {
            "description": "Listado de Pacientes",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Person"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Person": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string",
          "description": "primer nombre."
        },
        "lastName": {
          "type": "string",
          "description": "segundo apellido."
        },
        "dob": {
          "type": "string",
          "format": "date",
          "description": "fecha de nacimiento"
        },
        "sex": {
          "type": "string",
          "description": "M male, F female, U unknown."
        },
        "idCode": {
          "type": "string",
          "description": "Numero o codigo de documento local, regional o nacional."
        },
        "idType": {
          "type": "string",
          "description": "Tipo de documento"
        },
        "role": {
          "type": "string",
          "description": "Paciente o Medico"
        },
        "deleted": {
          "type": "boolean",
          "description": "logical delete"
        }
      }
    },
    "Error": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "fields": {
          "type": "string"
        }
      }
    }
  }
}
